<domain-meta>
	<name>user</name>
	<pluralName>users</pluralName>
	<listPage>
		<template>/domain/list</template>
		<basic-info>id;name;email;userProfile.city</basic-info>
	</listPage>
	<detailPage>
		<template>/domain/detail</template>
		<basic-info>id;name;email;userProfile.city</basic-info>
		<sub-item order="1">
			<name>authorities</name>
			<fields>id;createdBy</fields>
		</sub-item>
	</detailPage>
	<dialogPage>
		<template>/domain/dialog</template>
		<basic-info>name;email;userProfile.city</basic-info>
	</dialogPage>
	<searchFields>name;email</searchFields>
	<permissions>
		<permission>
			<role>user</role>
			<operation>update</operation>
		</permission>
	</permissions>
</domain-meta>
