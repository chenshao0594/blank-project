<domain-meta>
	<name>owner</name>
	<pluralName>owners</pluralName>
	<listPage>
		<template>/domain/list</template>
		<basic-info>id;displayName;telephone;address;city;</basic-info>
	</listPage>
	<detailPage>
		<template>/domain/detail</template>
		<basic-info>id;displayName;telephone;city;address;status</basic-info>
		<sub-item order="1">
			<name>pets</name>
			<fields>name;type</fields>
		</sub-item>
	</detailPage>
	<dialogPage>
		<template>/domain/dialog</template>
		<basic-info>firstName;lastName;telephone;city;address;status</basic-info>
	</dialogPage>
	<searchFields>firstName;lastName;telephone;city;address</searchFields>
	<permissions>
		<permission>
			<role>user</role>
			<operation>update</operation>
		</permission>
	</permissions>
</domain-meta>
